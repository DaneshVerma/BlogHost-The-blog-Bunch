<%- include('partials/header.ejs') %>

<div class="container overflow-scroll overflow-x-hidden" style="height: 70vh">
  <div class="row mb-2">
    <% post.forEach(element => { %>

    <div class="col-md-6">
      <div
        class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative"
      >
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary-emphasis"
            ><%=element.category %></strong
          >
          <h3 class="mb-0"><%= element.title %></h3>
          <div class="mb-1 text-body-secondary"><%= element.author %></div>
          <div class="content">
            <p class="card-text mb-auto " >
              <%=element.content.substring(0, 220) %>.. %>
            </div>
          </p>
          <a href="/view/post/<%= element.id %>" class="icon-link gap-1 icon-link-hover stretched-link">
            Continue reading
            <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
          </a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<%- include("partials/footer.ejs") %>
